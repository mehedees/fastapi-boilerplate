# Application
APP_NAME="FastAPI Boilerplate"
APP_VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=127.0.0.1
PORT=8000

# Database
DATABASE_HOST=mysql
DATABASE_PORT=5432
DATABASE_NAME=db
DATABASE_USER=USER
DATABASE_PASSWORD=Pass1234
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=30

# Security
# In production, generate with:
# import secrets; print(secrets.token_urlsafe(32))
SECRET_KEY=your-256-bit-secret-key-here
ACCESS_TOKEN_SECRET_KEY=your-256-bit-secret-key-here
REFRESH_TOKEN_SECRET_KEY=your-256-bit-secret-key-here
ACCESS_TOKEN_EXPIRE_SECONDS=30
REFRESH_TOKEN_EXPIRE_SECONDS=30
AUTH_TOKEN_ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]
